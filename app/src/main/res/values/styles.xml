<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <style name="Button.AddTimer" parent="Button.Timer">
        <item name="android:background">@drawable/button_add_timer</item>

        <item name="android:src">@android:drawable/ic_input_add</item>
        <item name="android:tint">@color/black</item>

        <item name="contentDescription">Add timer</item>
    </style>

    <style name="Button.PopularTimer" parent="Button.Timer">
        <item name="android:background">@drawable/button_timer</item>

        <item name="android:textColor">#9CC1FF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.RunningTimer" parent="Button.Timer">
        <item name="android:background">@drawable/button_running_timer</item>
    </style>

    <style name="Button.Timer" parent="AppTheme">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat">
    </style>

</resources>